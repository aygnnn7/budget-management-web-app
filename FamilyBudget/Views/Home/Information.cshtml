@{
    ViewData["Title"] = "Welcome!";
}
<head>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="css/information.css" rel="stylesheet" />
</head>
<div>
    
    <div style="background-color: #333131!important;" class="py-5 info-container">
        <div class="container px-5">
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-6">
                    <div class="text-center my-5">
                        <h1 class="display-5 fw-bolder text-white mb-2">Manage your budget</h1>
                        <p class="lead text-white-50 mb-4">Manage your family budget in an easy and enjoyable way!</p>
                        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                            <a class="btn btn-primary btn-lg px-4 me-sm-3" href="/User/Save?IsRegister=false">Sign in</a>
                            <a class="btn btn-outline-light btn-lg px-4" href="/User/Save?IsRegister=true">Join us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="py-5 border-bottom" id="features">
        <div class="container px-5 my-5">
            <div class="row gx-5">
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-collection"></i></div>
                    <h2 class="h4 fw-bolder">Transactions</h2>
                    <p>Add your transactions and easily track your income and expenses through understandable diagrams.</p>
                </div>
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-clock"></i></div>
                    <h2 class="h4 fw-bolder">Repetitions</h2>
                    <p>Select the day you want, add a transaction that you want to be repeated, and the process will be repeated on the same day you want every month.</p>
                </div>
                <div class="col-lg-4">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-search"></i></div>
                    <h2 class="h4 fw-bolder">User friendly interface</h2>
                    <p>Use our filters, and reach your infinite transactions in the category you want, the date range you want or the type you want.</p>
                </div>
            </div>
        </div>
    </div>
</div>